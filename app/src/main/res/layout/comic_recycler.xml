<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/recyclerComic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgName"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="@string/desc_img_comic"
            android:padding="8dp"
            android:scaleType="centerInside"
            tools:src="@drawable/zombie_breakers" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/imgName"
            android:fontFamily="@font/alegreya"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Zombie Breakers" />

        <TextView
            android:id="@+id/txtGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtName"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imgName"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            tools:text="Thriller / Action" />

        <TextView
            android:id="@+id/txtAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtGenre"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imgName"
            tools:text="Author: Daijiachong" />

        <ImageView
            android:id="@+id/imgFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/desc_img_favourite"
            tools:src="@drawable/ic_fav" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>